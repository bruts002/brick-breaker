{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src/",
    "paths": { 
      "App/*": [ "App/*" ],
      "util/*": [ "util/*" ],
      "biblioteca/*": [ "biblioteca/*" ]
  }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}