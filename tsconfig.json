{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./src/",
    "paths": { 
      "App/*": [ "App/*" ],
      "util/*": [ "util/*" ],
      "biblioteca/*": [ "biblioteca/*" ],
      "micro/*": [ "micro/*" ]
    },
    "jsx": "react",
    "jsxFactory": "micro.h"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}